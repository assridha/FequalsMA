<!-- Basic ejs script with heading content.title -->

<!DOCTYPE html>
<html>

<head>
    <title>Content</title>
</head>

<body>
    <h1 id="content">
        <%= content.title %>
    </h1>
    <p>Content</p>
    <p>
        <%- content.summary %>
    </p>
    <!-- create a form to edit content document and send data via POST route -->

    <form action="/<%= content._id %>/edit" method="POST">
        <input type="text" name="title" value="<%= content.title %>">
        <br>
        <!-- textarea for content.summary -->
        <textarea name="summary" cols="30" rows="10"><%= content.summary %></textarea>
        <br>
        <input type="submit" value="Edit">
    </form>
    <!-- form for deleting the content -->
    <form action="/<%= content._id %>/delete" method="POST">
        <input type="submit" value="Delete">
</body>


</html>