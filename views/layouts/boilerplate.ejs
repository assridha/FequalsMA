<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>the principle of least action</title>


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="icon" type="image/svg+xml" href="https://example.com/image.svg">

    <!-- Add style for #editor class-->
    <style type="text/css" media="screen">
        #editor {
            padding: 0px;
            margin: 0px;
            width: 100%;
            height: 400px;
        }
    </style>

</head>

<body class="d-flex flex-column vh-100">
    <%- include('../partials/navbar') %>
        <div class="container-fluid overflow-hidden">
            <div class="row vh-100 overflow-auto">
                <div class="col-12 col-sm-3 col-xl-2 px-sm-2 px-0 d-flex">
                    <div class="flex-sm-column flex-row flex-grow-1 align-items-center align-items-sm-start px-3 pt-2">
                        <nav class="navbar navbar-light bg-light">
                            <div class="container-fluid">
                                <form class="d-flex">
                                    <input class="form-control me-2" type="search" placeholder="Search"
                                        aria-label="Search">
                                </form>
                                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#sideBarToC" aria-controls="sideBarToC" aria-expanded="true"
                                    aria-label="Toggle navigation">
                                    <span>ToC</span>
                                </button>
                            </div>
                        </nav>
                        <div class="collapse show navbar-collapse" id="sideBarToC">
                            <ol class="bg-light">
                                <!-- sort toc.subjects in order of index -->
                                <% let subjectsSort=toc.subjects.sort((a, b)=> (a.index > b.index) ? 1 : -1) %>
                                    <% for (let i=0; i< subjectsSort.length; i++) { %>
                                        <li class="nav-item"><span>
                                                <a href="/pola/<%=subjectsSort[i]._id%>" id="subject<%=i%>">
                                                    <%= subjectsSort[i].title %>
                                                </a>
                                            </span><a data-bs-toggle="collapse" href="#collapseList<%=i%>" role="button"
                                                aria-expanded="false" aria-controls="collapseList<%=i%>">
                                                [+]
                                            </a></li>
                                        <!-- filter parts with parent subjectsSort[i] -->
                                        <% let partsSort=toc.parts.filter((part)=>
                                            part.subject.equals(subjectsSort[i]._id))
                                            %>
                                            <% partsSort=partsSort.sort((a, b)=> (a.index > b.index) ? 1 : -1)
                                                %>
                                                <ol class="collapse" id="collapseList<%=i%>">
                                                    <% for (let j=0; j< partsSort.length; j++) { %>
                                                        <li class="nav-item"><span>
                                                                <a href="/pola/subject/<%=partsSort[j]._id%>"
                                                                    id="part<%=i%>_<%=j%>">
                                                                    <%= partsSort[j].title %>
                                                                </a>
                                                            </span><a data-bs-toggle="collapse"
                                                                href="#collapseList<%=i%>_<%=j%>" role="button"
                                                                aria-expanded="false"
                                                                aria-controls="collapseList<%=i%>_<%=j%>">
                                                                [+]
                                                            </a></li>

                                                        <% let chaptersSort=toc.chapters.filter((chapter)=>
                                                            chapter.part.equals(partsSort[j]._id))
                                                            %>
                                                            <% chaptersSort=chaptersSort.sort((a, b)=> (a.index >
                                                                b.index) ? 1 : -1)
                                                                %>
                                                                <ol class="collapse" id="collapseList<%=i%>_<%=j%>">
                                                                    <% for (let k=0; k< chaptersSort.length; k++) { %>
                                                                        <li class="nav-item"><span>
                                                                                <a href="/pola/subject/part/<%=chaptersSort[k]._id%>"
                                                                                    id="chapter<%=i%>_<%=j%>_<%=k%>">
                                                                                    <%= chaptersSort[k].title %>
                                                                                </a>
                                                                            </span></li>
                                                                        <% if (linkObject.length>2) {%>
                                                                            <% if
                                                                                (chaptersSort[k]._id.equals(linkObject[2]._id))
                                                                                {%>
                                                                                <script>
                                                                                    document.getElementById("chapter<%=i%>_<%=j%>_<%=k%>").style.fontWeight = "bold";

                                                                                </script>


                                                                                <%}%>

                                                                                    <%}%>


                                                                                        <% } %>
                                                                </ol>
                                                                <!-- first check if length of linkObject is greater than 1  -->
                                                                <% if (linkObject.length>1) {%>
                                                                    <!-- create script to show collapseList<%=i%>_<%=j%> if _id matches the _id in linkObject[1]-->
                                                                    <% if (partsSort[j]._id.equals(linkObject[1]._id)) {
                                                                        %>
                                                                        <script>
                                                                            document.getElementById("collapseList<%=i%>_<%=j%>").classList.add("show");
                                                                            // also make part<%=j%> bold
                                                                            document.getElementById("part<%=i%>_<%=j%>").style.fontWeight = "bold";
                                                                        </script>
                                                                        <% } %>
                                                                            <% } %>

                                                                                <% } %>
                                                </ol>
                                                <!-- create script to show collapseList<%=i%> if _id matches the _id in linkObject[0]-->
                                                <% if (subjectsSort[i].equals(linkObject[0]._id)) { %>
                                                    <script>
                                                        document.getElementById("collapseList<%=i%>").classList.add("show");
                                                        // also make subject<%=i%> bold
                                                        document.getElementById("subject<%=i%>").style.fontWeight = "bold";
                                                    </script>
                                                    <% } %>
                                                        <% } %>

                            </ol>

                        </div>

                    </div>
                </div>
                <div class="col d-flex flex-column h-100">
                    <main class="row">
                        <div class="col pt-4">
                            <%- body %>
                        </div>
                    </main>


                    <%- include('../partials/footer') %>


                </div>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
</body>


</html>